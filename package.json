{
  "name": "defi-lending-dapp",
  "version": "1.0.0",
  "description": "A minimal DeFi lending and borrowing protocol built with Solidity and Hardhat.",
  "scripts": {
    "prepare": "husky install",
    "clean": "rm -rf cache artifacts typechain-types",
    "compile": "hardhat compile",
    "test": "hardhat test",
    "coverage": "hardhat coverage",
    "deploy": "hardhat run scripts/deploy.ts --network localhost",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "frontend:dev": "cd frontend && vite",
    "frontend:build": "cd frontend && vite build",
    "frontend:preview": "cd frontend && vite preview",
    "node": "npx hardhat node",
    "dev": "concurrently \"npm run node\" \"npm run frontend:dev\""
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.8",
    "@nomicfoundation/hardhat-ethers": "^3.0.8",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.12",
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.14",
    "@typechain/ethers-v6": "^0.4.3",
    "@typechain/hardhat": "^8.0.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/react-syntax-highlighter": "^15.5.7",
    "@types/styled-components": "^5.1.34",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "chai": "^4.3.4",
    "concurrently": "^9.1.2",
    "dotenv": "^16.1.4",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "hardhat": "^2.21.0",
    "hardhat-gas-reporter": "^1.0.10",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "mocha": "^9.0.3",
    "prettier": "^3.4.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-syntax-highlighter": "^15.5.0",
    "solidity-coverage": "^0.8.16",
    "styled-components": "^6.1.13",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.0",
    "typescript": "^5.3.0",
    "vite": "^6.0.5",
    "vite-plugin-dts": "^3.6.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.0",
    "ethers": "^6.11.1"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,md}": [
      "prettier --write"
    ]
  }
}
