{
  "name": "defi-lending-dapp",
  "version": "1.0.0",
  "description": "A minimal DeFi lending and borrowing protocol built with Solidity and Truffle.",
  "scripts": {
    "prepare": "husky",
    "clean": "rm -rf build",
    "compile": "truffle compile",
    "test": "tsc --project tsconfig.json && truffle test dist/test/Lending.test.js --network development",
    "migrate": "truffle migrate",
    "migrate:reset": "truffle migrate --reset",
    "migrate:sepolia": "truffle migrate --network sepolia",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "frontend:dev": "cd frontend && vite",
    "frontend:build": "cd frontend && vite build",
    "frontend:preview": "cd frontend && vite preview",
    "dev": "concurrently \"npm run frontend:dev\"",
    "analyze": "slither contracts/Lending.sol --solc-remaps '@openzeppelin/contracts/=node_modules/@openzeppelin/contracts/'",
    "ganache": "ganache --port 8545 --chain.chainId 1337 --database.dbPath ./ganache-db --wallet.deterministic --wallet.totalAccounts 10 --wallet.defaultBalance 1000"
  },
  "devDependencies": {
    "@openzeppelin/test-helpers": "^0.5.16",
    "@truffle/hdwallet-provider": "^2.1.15",
    "@types/bn.js": "^5.1.6",
    "@types/chai": "^5.2.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.15.29",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/react-syntax-highlighter": "^15.5.7",
    "@types/styled-components": "^5.1.34",
    "@types/web3": "^1.0.20",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "bn.js": "^5.2.2",
    "chai": "^5.2.0",
    "chai-bn": "^0.3.1",
    "concurrently": "^9.1.2",
    "dotenv": "^16.5.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "mocha": "^9.0.3",
    "prettier": "^3.4.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-syntax-highlighter": "^15.5.0",
    "styled-components": "^6.1.13",
    "truffle": "^5.11.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vite": "^6.0.5",
    "vite-plugin-dts": "^3.6.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.6"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,md}": [
      "prettier --write"
    ]
  }
}
